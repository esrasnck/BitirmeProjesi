                            <li>@Html.ActionLink("Ürün Listesi", "ListProduct", "Product", new { area = "administrator" }, null)</li>
                            <li>@Html.ActionLink("Ürün Ekleme", "AddProduct", "Product", new { area = "administrator" }, null)</li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Kategoriler</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Kategori Listesi", "ListCategory", "Category", new { area = "administrator" }, null)</li>
