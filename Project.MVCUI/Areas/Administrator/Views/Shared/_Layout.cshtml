    <script src="~/OuterTools/FlatAdmin/js/jquery.ui.touch-punch.min.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery.customSelect.min.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/respond.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/OuterTools/FlatAdmin/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>

    <!--common script for all pages-->
    <script src="~/OuterTools/FlatAdmin/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="~/OuterTools/FlatAdmin/js/sparkline-chart.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/easy-pie-chart.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/count.js"></script>


