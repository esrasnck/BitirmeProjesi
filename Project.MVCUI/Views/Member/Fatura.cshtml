@model Cart
@{

    Layout = null;

}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>Invoice</title>

    <!-- Bootstrap core CSS -->

    <link href="~/OuterTools/FlatAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/FlatAdmin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/FlatAdmin/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>


    <div class="panel panel-primary">
        <!--<div class="panel-heading navyblue"> INVOICE</div>-->
        <div class="panel-body">
            <div style="text-align:center" class="row invoice-list">

                <div class="col-lg-4 col-sm-4">
                    <h4>FATURA ADRESİ</h4>
                    <p>
                        @ViewBag.kullaniciad @ViewBag.soyad <br>
                        @ViewBag.kullaniciAdres <br>
                        Tel: +12 (012) 345-67-89
                    </p>
                </div>
                <div class="col-lg-4 col-sm-4">
                    <h4>KARGO ADRESİ</h4>
                    <p>
                        @ViewBag.kullaniciAdres 
                        P: +38 (123) 456-7890<br>
                    </p>
                </div>
                <div class="col-lg-4 col-sm-4">
                    <h4>FATURA BİLGİLERİ</h4>
                    <ul class="unstyled">
                        <li>FATURA NUMARASI		: <strong>69626</strong></li>
                        <li>FATURA TARİHİ    	: 2013-03-17</li>
                        <li>TESLİM TARİHİ    	: 2013-03-20</li>
                        <li>FATURA DURUMU		: Paid</li>
                    </ul>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>

                        <th>Ürün</th>
                        <th class="hidden-phone">Açıklama</th>
                        <th class="">Ürün Fiyatı</th>
                        <th class="">Adet</th>
                        <th>Genel Toplam</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (CartItem item in Model.Sepetim)
                    {
                        <tr>

                            <td>@item.Name</td>
                            <td class="hidden-phone"> Yok </td>
                            <td class="">@item.Price ₺</td>
                            <td class="">@item.Amount</td>
                            <td>@item.SubTotal ₺</td>
                        </tr>

                    }



                </tbody>
            </table>
            <div class="row">
                <div class="col-lg-4 invoice-block pull-right">
                    <ul class="unstyled amounts">
                        <li><strong>Alt Tutar:</strong> @Model.TotalPrice ₺</li>
                        <li><strong>İndirim :</strong> 0%</li>
                        <li><strong>KDV :</strong> -----</li>
                        <li><strong>Toplam Tutar :</strong> @Model.TotalPrice ₺</li>
                    </ul>
                </div>
            </div>
            <div class="text-center invoice-btn">

                <a class="btn btn-success btn-lg"  href="@Url.Action("ProductList","Member")"><i class="icon-check"></i> ALISVERISE DEVAM </a>
                <a class="btn btn-info btn-lg" onclick="javascript:window.print();"><i class="icon-print"></i> YAZDIR </a>
            </div>
        </div>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/OuterTools/FlatAdmin/js/jquery.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/OuterTools/FlatAdmin/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery.scrollTo.min.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/OuterTools/FlatAdmin/js/respond.min.js"></script>

    <!--common script for all pages-->
    <script src="~/OuterTools/FlatAdmin/js/common-scripts.js"></script>


</body>
</html>
